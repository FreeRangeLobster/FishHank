                    <Button x:Name="cmdStartLogging" Content="Start Logging" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="306.8,206,0,0" VerticalAlignment="Top" Width="114"/>
                    <Button x:Name="cmdStopLogging" Content="Stop Logging" Grid.Column="1" HorizontalAlignment="Left" Height="21" Margin="438.8,206,0,0" VerticalAlignment="Top" Width="114"/>
                    <StackPanel x:Name="sp" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="225" Margin="50,115,0,0" VerticalAlignment="Top" Width="231"/>
